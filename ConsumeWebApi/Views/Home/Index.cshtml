@using System.Data
@model DataTable


@{
    ViewData["Title"] = "Fetching Data from WebApi";

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Id")
            </th>
            <th> @Html.DisplayName("Name")</th>
            <th>@Html.DisplayName("Email")</th>
            <th>@Html.DisplayName("Address")</th>
            <th>@Html.DisplayName("Phone")</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["person_Id"]</td>
                <td>@row["person_Name"]</td>
                <td>@row["person_Email"]</td>
                <td>@row["person_Address"]</td>
                <td>@row["person_Phone"]</td>
                <td>
                    <a class="btn btn-outline-primary"  asp-action="EditPerson" asp-route-id="@row["person_Id"]" >Edit</a>
                    </td>
                <td>
                    <a class="btn btn-outline-danger" asp-action="DeletePerson" asp-route-id="@row["person_Id"]" >Delete</a>
                  </td>
            </tr>
        }
    </tbody>
</table>